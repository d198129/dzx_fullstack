*
    margin 0
    padding 0
.number1
    box-sizing border-box
    width 100%
    height 713px
    background-image url('../images/section1-bg.png')
    background-size 100% 100%
    overflow hidden
    .title
        margin 150px auto 0
        width 708px
        height 138px
        font-family Exo-Thin
        font-size 50px
        text-align center
        font-weight normal
        font-stretch normal
        line-height 75px
        letter-spacing 2px
        color #282828
    .video
        width 59px
        margin 39px auto 
    .btn
        box-sizing border-box
        width 190px
        height 50px
        background-color #ff6d6d
        border-radius 3px
        font-size 16px
        padding 18px 50px 20px 50px
        text-align center
        margin 0 auto
        color #fff
    p
        text-align center
        margin-top 19px
        font-size 13px
        color #282828
        opacity 0.6
.number2
    box-sizing border-box
    display flex
    .left
        flex 1
    .right
        width 500px
        height 635px
        background-color #ededed
        position relative
        .red1
            position absolute
            top 135px
            left 0
            width 500px
            height 500px
            .red
                width 0
                height 0
                border-bottom 250px solid #fb8686
                border-right 250px solid #fb8686
                border-left 250px solid #ededed
                border-top 250px solid #ededed
    .left
        padding-left 149px
        .p1
            margin-top 180px
            font-size 16px
            color #ff6d6d
        .p2
            width 500px
            font-size 35px
            span
                color #ff6d6d
        .down
            margin-top 45px
            width 540px
            height 180px
            font-size 16px
            color #282828
            opacity 0.66
