    box-sizing border-box
    position relative
    background-image url('../images/pen-holder.png')
    width 100%
    height 590px
    background-size 100% 100%
    overflow hidden
    img
        position absolute
        top -10px
        right 150px
    .title
        width 459px
        height 60px
        margin 138px auto 91px
        text-align center
        .p1
            color #ff6d6d
        .p2
            color #282828
            font-size 35px
    .feat
        display flex
        width 980px
        height 176px
        margin 0 auto 184px
        text-align center
        .f1
            flex 1
            margin-right 46px
        .f2
            flex 1
            margin-right 46px
        .f3
            flex 1
        .pic
            width 50px
            height 50px
            border-radius 25px
            margin 0 auto 25px
            background-color #000
        .p1
            color #282828
